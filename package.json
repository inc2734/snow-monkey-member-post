{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@wordpress/browserslist-config": "^2.6.0",
    "autoprefixer": "^9.7.6",
    "cssnano": "^4.1.10",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "rimraf": "^3.0.2",
    "sass-basis": "^10.1.1",
    "@wordpress/scripts": "7.2.0",
    "prettier": "npm:wp-prettier@1.19.1",
    "po2json": "^1.0.0-alpha"
  },
  "scripts": {
    "lint:js": "wp-scripts lint-js src/extension",
    "lint": "npm-run-all -p lint:*",
    "format:js": "wp-scripts format-js src/extension",
    "format": "npm-run-all -p format:*",
    "clean:js": "rimraf dist/js",
    "clean:css": "rimraf dist/css",
    "css": "npm run clean:css && node-sass src/css -o dist/css && postcss dist/css/*.css -r",
    "js:editor-extension": "wp-scripts build src/js/editor-extension.js --output-path dist/js",
    "js": "npm run clean:js && npm-run-all -p js:*",
    "po2json:snow-monkey-editor@editor-extension": "po2json languages/snow-monkey-member-post-ja.po languages/snow-monkey-member-post-ja-snow-monkey-member-post@editor-extension.json -f jed",
    "po2json": "npm-run-all -p po2json:*",
    "build": "npm-run-all -p css js po2json",
    "clean:zip": "rimraf snow-monkey-member-post.zip",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.ruleset.xml' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='/bin' --exclude='/tests' --exclude='package*.json' . snow-monkey-member-post && cd snow-monkey-member-post && composer install --no-dev",
    "zip:archive": "zip -9 -qmr snow-monkey-member-post.zip snow-monkey-member-post",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive"
  }
}
