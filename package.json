{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@wordpress/browserslist-config": "^4.1.0",
    "@wordpress/env": "4.2.0",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.16",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "rimraf": "^3.0.2",
    "sass-basis": "^16.0.4",
    "@wordpress/scripts": "20.0.2",
    "prettier": "npm:wp-prettier@2.0.5",
    "po2json": "^1.0.0-alpha"
  },
  "scripts": {
    "export:wp-content:themes": "npm run cli 'cp -r wp-content/themes .export/wp-content'",
    "export:wp-content:uploads": "npm run cli 'cp -r wp-content/uploads .export/wp-content'",
    "export:wp-content": "npm run cli 'rm -rf .export/wp-content' && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
    "export:db": "mkdir -p .export/sql && npm run wp 'db export .export/sql/local.sql'",
    "export": "run-p export:*",
    "wp-env": "wp-env",
    "start": "wp-env start && open http://localhost:8888",
    "stop": "npm run export && wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "pretest": "wp-env start && wp-env run composer 'install --no-interaction'",
    "test:lint:php": "wp-env run composer run-script lint",
    "test:lint": "run-s test:lint:*",
    "test:unit:php": "wp-env run composer run-script install-theme && wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/snow-monkey-member-post/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "format:js": "wp-scripts format-js src/extension",
    "format": "npm-run-all -p format:*",
    "clean:js": "rimraf dist/js",
    "clean:css": "rimraf dist/css",
    "css": "npm run clean:css && node-sass src/css -o dist/css && postcss dist/css/*.css -r",
    "js:editor-extension": "wp-scripts build src/js/editor-extension.js --output-path dist/js",
    "js": "npm run clean:js && npm-run-all -p js:*",
    "po2json:snow-monkey-member-post@editor-extension": "po2json languages/snow-monkey-member-post-ja.po languages/snow-monkey-member-post-ja-snow-monkey-member-post@editor-extension.json -f jed",
    "po2json": "npm-run-all -p po2json:*",
    "build": "npm-run-all -p css js po2json",
    "clean:zip": "rimraf snow-monkey-member-post.zip",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.ruleset.xml' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='/sql' --exclude='/tests'  --exclude='/uploas' --exclude='package*.json' . snow-monkey-member-post && wp-env start && wp-env run composer 'install --no-dev -d snow-monkey-member-post'",
    "zip:archive": "zip -9 -qmr snow-monkey-member-post.zip snow-monkey-member-post",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive"
  }
}
